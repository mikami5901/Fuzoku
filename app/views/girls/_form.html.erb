</div>

<div>
  <%= form.label :tag_d, style: "display: block" %>
    <%= form.collection_select(:tag_d, Tag.all, :tag_name, :tag_name) %>
</div>

  <div>
    <%= form.label :nomination_fee, style: "display: block" %>
    <%= form.number_field :nomination_fee %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :experience, style: "display: block" %>
    <%= form.check_box :experience %>
  </div>

  <div>
    <%= form.label :option_id, style: "display: block" %>
    <%= form.number_field :option_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
