<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(schedule.errors.count, "つの項目に") %> 入力に不足があります。以下の項目を直してください。</h2>

      <div class= "d-flex flex-column">
      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %><div></li>
        <% end %>
      </ul>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :girl_id, style: "display: block" %>
      <%= form.collection_select(:girl_id, @girls, :id, :name) %>
  </div>

  <div>
    <%= form.label :work_day, style: "display: block" %>
    <%= form.date_field :work_day %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :finish_time, style: "display: block" %>
    <%= form.time_field :finish_time %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
