
<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <%= form.text_field :name, placeholder: "お名前", class: "input-form my-2" %>
  </div>

  <div>
    
    <%= form.text_field :email, placeholder: "メールアドレス", class: "input-form my-2" %>
  </div>

  <div>
  
    <%= form.text_field :login, placeholder: "電話番号", class: "input-form my-2" %>
  </div>

  <div>
 
  <%= form.date_select :birthday, use_month_numbers: true, 
  start_year: 1980, end_year: (Time.now.year - 18),default: Date.new(1989, 1, 1),
  class: "input-form my-2" %>
  </div>

  <div>
  
  <% prefectures = ["北海道", "青森県", "岩手県", "宮城県", "秋田県", "山形県", "福島県", "茨城県", "栃木県", "群馬県", "埼玉県", "千葉県", "東京都", "神奈川県", "新潟県", "富山県", "石川県", "福井県", "山梨県", "長野県", "岐阜県", "静岡県", "愛知県", "三重県", "滋賀県", "京都府", "大阪府", "兵庫県", "奈良県", "和歌山県", "鳥取県", "島根県", "岡山県", "広島県", "山口県", "徳島県", "香川県", "愛媛県", "高知県", "福岡県", "佐賀県", "長崎県", "熊本県", "大分県", "宮崎県", "鹿児島県", "沖縄県"] %>
  <%= form.select :address, options_for_select(prefectures), { prompt: "都道府県を選択してください" }, { class: "input-form my-2" } %>
  </div>

  <div>

  <%= form.text_area :message, placeholder: "希望内容", class: "input-form my-2", rows: 5, cols: 40 %>
</div>


  <div>
    <%= form.submit "応募" %>
  </div>
<% end %>
